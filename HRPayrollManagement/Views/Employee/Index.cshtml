@model IEnumerable<HRPayrollManagement.Models.Employee>

@{
    ViewBag.Title = "Employee Index";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Employee Index</h2>

    <div class="d-flex justify-content-between mb-3">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>

    <table class="table table-hover table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>Image</th>
                <th>Payroll Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        @if (item.ImagePath != null)
                        {
                            <img src="@Url.Content(item.ImagePath)" class="img-thumbnail" width="100" alt="@item.Name" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@item.Payrolls.Count</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.EmployeeId }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>