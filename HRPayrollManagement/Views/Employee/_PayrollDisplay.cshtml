@model HRPayrollManagement.Models.Employee

<div class="container mt-4">
    <h3 class="text-primary mb-4">Payroll Details</h3>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Salary</th>
                <th scope="col">Bonus</th>
                <th scope="col">Deductions</th>
                <th scope="col">Payment Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Payrolls != null && Model.Payrolls.Any())
            {
                foreach (var payroll in Model.Payrolls)
                {
                    <tr>
                        <td>
                            @payroll.Salary.ToString("C")
                        </td>
                        <td>
                            @payroll.Bonus.ToString("C")
                        </td>
                        <td>
                            @payroll.Deductions.ToString("C")
                        </td>
                        <td>
                            @payroll.PaymentDate.ToString("dd/MM/yyyy")
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No payroll records found.</td>
                </tr>
            }
        </tbody>
    </table>


    <div class="text-end">
        <a href="@Url.Action("CreatePayroll", "Employee")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Payroll
        </a>
    </div>
</div>
